<!DOCTYPE html>
<html>
<head>
  <title>VacacyCBT</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "bootstrap.min",:media =>"all" %>
  <%= stylesheet_link_tag "bootstrap-responsive.min",:media =>"all"%>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
</head>
<body>
	<% if user_signed_in? %>
	 <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">

        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#">VacacyCBT</a>
          <div class="nav-collapse collapse">

            <ul class="nav">
              <li <%= yield :lnkHome %>><%= link_to 'Home',root_path %></li>
              <li <%= yield :lnkCreatVacation %>><%= link_to 'Create New Vacation', new_vacation_path %></li>
              <li <%= yield :lnkSearch %>><%= link_to 'Search', search_new_path%></li>
              <li><%= link_to 'Sign out',destroy_user_session_path %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>

      </div>
    </div>
<% end %>
    <div class="container">

      
     <%= yield %>
    </div>



</body>
</html>
